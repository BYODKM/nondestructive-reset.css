.html
    height 100%
    font-size 10px

.body
    margin 0
    min-height 100%
    min-width 320px
    font-family sans-serif
    font-size 1.6rem
    line-height 1.25
    word-wrap break-word
    -webkit-font-smoothing antialiased
    -webkit-tap-highlight-color rgba(0,0,0,0)
    -webkit-touch-callout none

.a
    color blue
    text-decoration none

.address
    font-style normal

.button
    padding 0
    cursor pointer
    background none
    border none
    -webkit-appearance none
    -webkit-font-smoothing antialiased

    &:hover
    &:focus
    &:active
        outline none

.code
    white-space nowrap

.fieldset
    margin 0
    padding 0
    border none

.figure
    margin 0

.h1
.h2
.h3
.h4
.h5
.h6
    margin 0
    font-size 1em
    font-weight inherit

.iframe
    display block
    overflow hidden
    border none

.img
    vertical-align top

.input

    &:focus
        outline none

.label
    cursor pointer

.p
    margin 0

.pre
    word-wrap normal

    .code
        white-space pre

.textarea

    &:focus
        outline none

.th
    font-weight normal
    text-align left
